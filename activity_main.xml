<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="org.somecompany.stockreader.MainActivity"
    android:background="#e9231919">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="10dp"
                android:text="Volume:"
                android:layout_alignRight="@+id/stock_symbol"
                android:layout_alignEnd="@+id/stock_symbol"
                android:id="@+id/textView3"
                android:layout_below="@+id/volume"
                android:layout_alignBottom="@+id/volume" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/volume"
                android:text="Volume:"
                android:textSize="30dp"
                android:layout_below="@+id/textView2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp"
                android:textColor="#0ad3e5" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Yield"
                    />
            </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/GrossProfit"
            />

    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_symbol"
        android:text="symbol:"
        android:layout_weight="2"
        android:textSize="45dp"
        android:textColor="#0ad3e5"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textStyle="bold" />

    <TextView
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:text="Gross Profit:"
        android:layout_marginTop="32dp"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:backgroundTint="#020202"
        android:alpha="2"
        android:autoText="false"
        android:backgroundTintMode="src_in"
        android:breakStrategy="high_quality"
        android:foregroundTint="#dc4b4b"
        android:foregroundTintMode="src_in"
        android:layout_below="@+id/stock_symbol"
        android:layout_alignRight="@+id/stock_symbol"
        android:layout_alignEnd="@+id/stock_symbol"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yield:"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stock_price"
        android:text="price"
        android:textSize="55sp"
        android:textColor="#0ad3e5"
        android:textStyle="bold"
        android:layout_alignTop="@+id/stock_symbol"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout"
        android:background="#8c181010" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grossProfitView"
        android:layout_above="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignRight="@+id/stock_price"
        android:layout_alignEnd="@+id/stock_price"
        android:textColor="#0ad3e5"
        android:textSize="30dp"
        android:background="#8c181010"
        android:layout_alignLeft="@+id/stock_price"
        android:layout_alignStart="@+id/stock_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_alignRight="@+id/stock_price"
        android:layout_alignEnd="@+id/stock_price"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/grossProfitView"
        android:layout_alignStart="@+id/grossProfitView"
        android:layout_alignBottom="@+id/textView2"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:background="#8c181010" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/volume"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignBottom="@+id/volume"
        android:layout_alignRight="@+id/stock_price"
        android:layout_alignEnd="@+id/stock_price"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:background="#8c181010" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:textColor="#0ad" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/button"
        android:background="#0ad"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView5"
        android:layout_toStartOf="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="As of:"
        android:id="@+id/textView6"
        android:textColor="#0ad"
        android:textSize="25dp"
        android:layout_above="@+id/textClock"
        android:layout_alignLeft="@+id/textClock"
        android:layout_alignStart="@+id/textClock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:text="P/E Ratio:"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="30dp"
        android:textColor="#0ad3e5"
        android:background="#8c181010"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button" />

</RelativeLayout>


